<div class="form_header">
    Showing Information For: <%= @recipe.title %>
</div>
<div class="forms_forms_container recipe_detail_container">
    <div class="recipe_show_recipe">
        <div class="recipe_show_data">Title: <%= @recipe.title %></div>
        <div class="recipe_show_data">Serving Size: <%= @recipe.servings %></div>
        <div class="recipe_show_data">Cooking Time: <%= @recipe.cook_time %> minute(s)</div>
        <div class="recipe_show_data">Prepping Time: <%= @recipe.prep_time %> minute(s)</div>
        <div class="recipe_show_data">Total Time: <%= @recipe.total %> minute(s)</div>
        <div class="recipe_show_data">Country of Origin: <%= @recipe.origin %></div>
    </div>
    <div class="recipe_show_ingredients">
        <div class="form_header">Ingredients:</div>
        <% @recipe.ingredients.each do |i| %>
            <div class="recipe_show_data">
                <% if i.sequence %>
                    <%= i.sequence %> .) <%= i.item %>
                <% else %>
                    <%= i.item %>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="recipe_show_steps">
        <div class="form_header">Steps:</div>
        <% @recipe.steps.each do |i| %>
            <div class="recipe_show_data">
                <% if i.sequence %>
                    <%= i.sequence %> .) <%= i.description %>
                <% else %>
                    <%= i.description %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
<div class="">
    <%= button_to 'Edit', { :action => "edit" }, :method => "get", :class => "show_btn" %>
    <%= button_to 'delete', @recipe, method: :delete, :class => "reddish show_btn" %>
</div>