<p>
Please choose from the list of recipes below.
</p>

<div class="recipe_list_container">
    <div class="table_header">
        <div class="table_header_item">Title</div>
        <div class="table_header_item">Servings</div>
        <div class="table_header_item">Cook time</div>
        <div class="table_header_item">Prep time</div>
        <div class="table_header_item">Total time</div>
    </div>
    <% @recipes.each do |recipe| %>
        <div class="table_data_each">
            <div class="table_data_data"><%= link_to recipe.title, recipe %></div>
            <div class="table_data_data"><%= recipe.servings %></div>
            <div class="table_data_data"><%= recipe.cook_time %></div>
            <div class="table_data_data"><%= recipe.prep_time %></div>
            <div class="table_data_data"><%= recipe.total %></div>
            <a href="http://127.0.0.1:3000/recipes/<%= recipe.id %>/edit">Edit</a>
            <button onclick="delete_recipe('<%= recipe.id %>')">Delete</button>
        </div>
    <% end %>
</div>
